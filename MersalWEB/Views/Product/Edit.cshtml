@model MersalWEB.Models.ProImagesVm

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">

        <h4>Edit Category <span>@Model.product.Name</span></h4>
        <hr />

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="product.ProductId" />
            <div class="form-group">
                        <label asp-for="product.Name" class="control-label"></label>
                        <input asp-for="product.Name" class="form-control" />
                        <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="product.Description" class="control-label"></label>
                        <input asp-for="product.Description" class="form-control" />
                        <span asp-validation-for="product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="product.Qty" class="control-label"></label>
                        <input asp-for="product.Qty" class="form-control" />
                        <span asp-validation-for="product.Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="product.Price" class="control-label"></label>
                        <input asp-for="product.Price" class="form-control" />
                        <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="product.CreatedDate" class="control-label"></label>
                        <input asp-for="product.CreatedDate" class="form-control" />
                <span asp-validation-for="product.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="product.SupplierName" class="control-label"></label>
                        <input asp-for="product.SupplierName" class="form-control" />
                        <span asp-validation-for="product.SupplierName" class="text-danger"></span>
            </div>
       </div>
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-5">
            <div class="form-group">
                        <label asp-for="CatName" class="control-label"></label>
                        <select asp-for="CatName" class="form-control" asp-items="ViewBag.CatName"></select>
                        <span asp-validation-for="CatName" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                        <label asp-for="product.IsAvailable" class="control-label"></label>
                        <input class="form-check-input" type="checkbox" asp-for="product.IsAvailable" />
                        <span asp-validation-for="product.IsAvailable" class="text-danger"></span>
            </div>
            <br />
                    <div class="form-group">

                        <img src="~/admin/assets/images/@Model.product.Photo"
                             class="rounded-square"
                             width="100px" height="75px"
                             style="border:1px"
                             asp-append-version="true" accept="image/*" />

                        <div id="chooseFile"><input class="form-control" asp-for="prophoto" type="file" accept=".xlsx,.xls,image/*,.doc,audio/*,.docx,video/*,.ppt,.pptx,.txt,.pdf"></div>
                    </div>
                    <div class="form-group">
                        @foreach (var item in Model.productimages)
                           {
                        <img src="~/admin/assets/images/@item.Image"
                             class="rounded-square"
                             width="100" height="75px"
                             style="border:1px"
                             asp-append-version="true" accept="image/*" />

                        
                              }
                        <div><input class="form-control" asp-for="proImgsVm" type="file" accept=".xlsx,.xls,image/*,.doc,audio/*,.docx,video/*,.ppt,.pptx,.txt,.pdf" multiple></div>
                    </div>
                    <br />

                    <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
            </div>
            </div>
        </form>

    </div>
</div>


